<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/billboardFragment">

    <fragment
        android:id="@+id/billboardFragment"
        android:name="com.fmiguelop.laboratorio_5.BillboardFragment"
        android:label="fragment_billboard"
        tools:layout="@layout/fragment_billboard" >
        <action
            android:id="@+id/action_billboardFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_billboardFragment_to_newMovierFragment"
            app:destination="@id/newMovierFragment" />
    </fragment>
    <fragment
        android:id="@+id/newMovierFragment"
        android:name="com.fmiguelop.laboratorio_5.newMovierFragment"
        android:label="fragment_new_movier"
        tools:layout="@layout/fragment_new_movier" />
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.fmiguelop.laboratorio_5.movieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" />
</navigation>